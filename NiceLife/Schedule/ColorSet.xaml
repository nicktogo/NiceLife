        <Slider x:Name="sliderR" Orientation="Vertical" HorizontalAlignment="Left" Margin="696,99,0,326"  Width="50"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="276,398,0,0" TextWrapping="Wrap" Text="Color" VerticalAlignment="Top" FontSize="48" Foreground="#FF3A80C7" Height="66" Width="149"/>
        <Slider x:Name="sliderG" Orientation="Vertical" HorizontalAlignment="Left" Margin="797,99,0,326"  Width="50"/>
        <Slider x:Name="sliderB" Orientation="Vertical" HorizontalAlignment="Left" Margin="894,99,0,326"  Width="50"/>
